import pandas as pd
import matplotlib.pyplot as plt
import os

# -----------------------------
# Paths
# -----------------------------
DATA_PATH = "data/weatherHistory.csv"
VIS_PATH = "visualizations"

os.makedirs(VIS_PATH, exist_ok=True)

# -----------------------------
# Load Data
# -----------------------------
try:
    df = pd.read_csv('weatherHistory.csv')
    print("Weather data loaded successfully.")
except FileNotFoundError:
    print("Error: weatherHistory.csv not found.")
    exit()

# -----------------------------
# Data Cleaning
# -----------------------------
df.dropna(subset=['Temperature (C)'], inplace=True)
df['Formatted Date'] = pd.to_datetime(df['Formatted Date'], utc=True)
df['Month'] = df['Formatted Date'].dt.month

# -----------------------------
# Analysis
# -----------------------------
monthly_avg_temp = df.groupby('Month')['Temperature (C)'].mean()
precip_distribution = df['Precip Type'].value_counts()

# -----------------------------
# Visualization 1: Line Chart
# -----------------------------
plt.figure()
plt.plot(df['Formatted Date'].head(500), df['Temperature (C)'].head(500))
plt.title("Temperature Trend Over Time")
plt.xlabel("Date")
plt.ylabel("Temperature (°C)")
plt.tight_layout()
plt.savefig(f"{VIS_PATH}/temperature_trend.png")
plt.close()

# -----------------------------
# Visualization 2: Bar Chart
# -----------------------------
plt.figure()
monthly_avg_temp.plot(kind='bar')
plt.title("Average Temperature by Month")
plt.xlabel("Month")
plt.ylabel("Average Temperature (°C)")
plt.tight_layout()
plt.savefig(f"{VIS_PATH}/avg_temperature_by_month.png")
plt.close()

# -----------------------------
# Visualization 3: Pie Chart
# -----------------------------
plt.figure()
precip_distribution.plot(kind='pie', autopct='%1.1f%%')
plt.title("Precipitation Distribution")
plt.ylabel("")
plt.tight_layout()
plt.savefig(f"{VIS_PATH}/precipitation_distribution.png")
plt.close()

print("Analysis complete. Charts saved successfully.")
